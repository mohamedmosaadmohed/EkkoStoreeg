</head>

<body>
	<!-- Header -->
	<header>
		<!-- Header desktop -->
		<div class="container-menu-desktop">
			<!-- Topbar -->
			<div class="top-bar">
				<div class="content-topbar flex-sb-m h-full container">
					<div class="left-top-bar">
						Free shipping for standard order over EGP 3000
					</div>

					<div class="right-top-bar flex-w h-full">
						<a asp-controller="Contact" asp-action="Index" class="flex-c-m trans-04 p-lr-25">
							Help & FAQs
						</a>
						<a href="#" class="flex-c-m trans-04 p-lr-25">
							EN
						</a>

						<a href="#" class="flex-c-m trans-04 p-lr-25">
							EGP
						</a>
					</div>
				</div>
			</div>

			<div class="wrap-menu-desktop">
				<nav class="limiter-menu-desktop container">
					<!-- Logo desktop -->
					<a asp-area="Customer" asp-controller="Home" asp-action="Index" class="logo">
						<img src="~/Customer/images/icons/black_image-rem.png" alt="IMG-LOGO">
						<span class="ekko">EkkoStore</span>
					</a>
					<style>
						.ekko {
							font-size: 24px;
							font-weight: bold;
							color:#000
						}
					</style>
					<!-- Menu desktop -->
					<div class="menu-desktop">
						<ul class="main-menu">
							<li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active-menu" : "")">
								<a asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
							</li>
							<li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Shop" ? "active-menu" : "")">
								<a asp-area="Customer" asp-controller="Shop" asp-action="Index">Shop</a>
							</li>
							<li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Cart" ? "active-menu" : "")">
								<a asp-area="Customer" asp-controller="Cart" asp-action="Index">Cart</a>
							</li>
							<li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "AboutUs" ? "active-menu" : "")">
								<a asp-area="Customer" asp-controller="Home" asp-action="AboutUs">About</a>
							</li>
							<li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Contact" ? "active-menu" : "")">
								<a asp-area="Customer" asp-controller="Contact" asp-action="Index">Contact</a>
							</li>
							@if (User.Identity.IsAuthenticated && User.IsInRole(SD.AdminRole))
							{
								<li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active-menu" : "")">
									<a asp-area="Admin" asp-controller="Dash" asp-action="Index">Dashboard</a>
								</li>
							}
						</ul>
					</div>

					<!-- Icon header -->
					<div class="wrap-icon-header flex-w flex-r-m">
						<partial name="_LoginPartial" />
						<div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 js-show-modal-search">
							<i class="zmdi zmdi-search"></i>
						</div>
						@await Component.InvokeAsync("Wish")
						@await Component.InvokeAsync("ShoppingCart")
					</div>
				</nav>
			</div>
		</div>

		<!-- Header Mobile -->
		<div class="wrap-header-mobile">
			<!-- Logo moblie -->
			<div class="logo-mobile">
				<a asp-area="Customer" asp-controller="Home" asp-action="Index"><img src="~/Customer/images/icons/black_image-rem.png" alt="IMG-LOGO"></a>
			</div>

			<!-- Icon header -->
			<div class="wrap-icon-header flex-w flex-r-m m-r-15">
				<div class="icon-header-item cl2 hov-cl1 trans-04 p-r-11 js-show-modal-search">
					<i class="zmdi zmdi-search"></i>
				</div>
				<partial name="_LoginPartial" />
				@await Component.InvokeAsync("Wish")
				@await Component.InvokeAsync("ShoppingCart")
			</div>

			<!-- Button show menu -->
			<div class="btn-show-menu-mobile hamburger hamburger--squeeze">
				<span class="hamburger-box">
					<span class="hamburger-inner"></span>
				</span>
			</div>
		</div>


		<!-- Menu Mobile -->
		<div class="menu-mobile">
			<ul class="topbar-mobile">
				<li>
					<div class="left-top-bar">
						Free shipping for standard order over EGP 3000
					</div>
				</li>

				<li>
					<div class="right-top-bar flex-w h-full">
						<a asp-controller="Contact" asp-action="Index" class="flex-c-m p-lr-10 trans-04">
							Help & FAQs
						</a>
						<a href="#" class="flex-c-m p-lr-10 trans-04">
							EN
						</a>

						<a href="#" class="flex-c-m p-lr-10 trans-04">
							EGP
						</a>
					</div>
				</li>
			</ul>

			<ul class="main-menu-m">
				<li>
					<a asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
				</li>

				<li>
					<a asp-area="Customer" asp-controller="Shop" asp-action="Index" class="label1 rs1" data-label1="hot">Shop</a>
				</li>
				<li>
					<a asp-area="Customer" asp-controller="Cart" asp-action="Index">Cart</a>
				</li>

				<li>
					<a asp-area="Customer" asp-controller="Home" asp-action="AboutUs">About</a>
				</li>

				<li>
					<a asp-area="Customer" asp-controller="Contact" asp-action="Index">Contact</a>
				</li>
				@if (User.Identity.IsAuthenticated && User.IsInRole(SD.AdminRole))
				{
					<li>
						<a asp-area="Admin" asp-controller="Dash" asp-action="Index">Dashboard</a>
					</li>
				}
			</ul>
		</div>

		<!-- Modal Search -->
		<div class="modal-search-header flex-c-m trans-04 js-hide-modal-search">
			<div class="container-search-header">
				<button class="flex-c-m btn-hide-modal-search trans-04 js-hide-modal-search">
					<img src="~/Customer/images/icons/icon-close2.png" alt="CLOSE">
				</button>

				<div class="wrap-search-header flex-w p-l-15">
					<button class="flex-c-m trans-04">
						<i class="zmdi zmdi-search"></i>
					</button>
					<input type="text" id="searchInput" class="plh3" type="text" name="search" placeholder="Search...">
					<div id="results" class="flex-w p-l-15">
						
					</div>
				</div>
			</div>
		</div>
	</header>
	<!--Loader-->
	<!-- Loader -->
	<div id="loader" class="loader">
		<div class="spinner"></div>
	</div>
	<!-- Cart -->
	@await Component.InvokeAsync("Cart")
		@RenderBody()
	<!-- Footer -->
	<footer class="bg3 p-t-75 p-b-32">
		<div class="container">
			<div class="row">
				<div class="col-sm-6 col-lg-3 p-b-50">
