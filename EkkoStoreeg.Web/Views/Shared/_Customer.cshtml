@using EkkoSoreeg.Web.ViewComponents
@using Microsoft.AspNetCore.Http;
@using EkkoSoreeg.Utilities;
@inject IHttpContextAccessor _http;
<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>EkkoStore - Online Store</title>

	<!-- Meta SEO -->
	<meta name="description" content="EkkoStore is your go-to online clothing store offering the latest fashion trends at affordable prices. Shop now for the best deals on men's and children's apparel.">
	<meta name="keywords" content="online clothing store, fashion, men's clothing,children's clothing, affordable fashion, trendy clothes, EkkoStore">
	<meta name="author" content="EkkoStore Team">
	@* These help improve your site's visibility when shared on social media platforms like Facebook *@
	<meta property="og:title" content="EkkoStore - Your One-Stop Online Clothing Store">
	<meta property="og:description" content="Explore the latest fashion trends and shop for high-quality clothing for men and children at EkkoStore. Enjoy affordable prices and fast shipping!">
