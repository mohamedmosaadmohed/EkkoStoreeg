@model Catagory
@{
    ViewBag.pageTitle = "Category Management";
    ViewBag.CardTitle = "Create";
}
<section class="section">
    <div class="row">
        <div class="col-lg-9">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Create Catagory</h5>
                    <!-- Floating Labels Form -->
                    <form class="row g-3" method="post">
                        <div class="col-md-12">
                            <div class="form-floating">
                                <input asp-for="Name" type="text" class="form-control" id="floatingName" placeholder="Name">
                                <label for="floatingName">Name</label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <textarea asp-for="Description" class="form-control" placeholder="Description" id="floatingTextarea" style="height: 100px;"></textarea>
                                <label for="floatingTextarea">Description</label>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" asp-action="Create" class="btn btn-success m-2 px-4">Save</button>
                            <button type="reset" class="btn btn-secondary m-2 px-4">Reset</button>
                        </div>
                    </form><!-- End floating Labels Form -->

                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}