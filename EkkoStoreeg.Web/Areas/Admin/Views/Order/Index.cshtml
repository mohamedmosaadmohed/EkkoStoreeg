@{
    ViewBag.pageTitle = "Order Management";
    ViewBag.CardTitle = "View Orders";
}

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h5 class="card-title">Order Table</h5>
                        <a class="btn btn-primary me-3" asp-action="DownloadExcelSheet"><i class="bi bi-download"></i></a>
                    </div>
                    <div class="table-responsive">
                        <table id="mytable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>PhoneNumber</th>
                                    <th>Order Status</th>
                                    <th>Total Order</th>
                                    <th>Email</th>
                                    <th>Details</th>
                                    <th>DownStatus</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/dashboard/js/order.js"></script>
}
