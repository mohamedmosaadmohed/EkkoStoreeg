@model IEnumerable<Product>
@{
    ViewBag.pageTitle = "Product Management";
    ViewBag.CardTitle = "View Product";
}
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h5 class="card-title">Product Table</h5>
                        <a class="btn btn-success me-3" asp-action="Create"><i class="bi bi-plus"></i></a>
                    </div>
                    <div class="table-responsive">
                        <table id="mytable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>StockNum</th>
                                <th>Price</th>
                                <th>CreatedDate</th>
                                <th>Category</th>
                                <th>Colors</th>
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/dashboard/js/productdatatable.js"></script>
}
