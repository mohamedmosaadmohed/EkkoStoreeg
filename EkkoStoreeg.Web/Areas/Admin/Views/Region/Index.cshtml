@model IEnumerable<Region>
@{
    ViewBag.pageTitle = "Region Management";
    ViewBag.CardTitle = "View Region";
}

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h5 class="card-title">Region Table</h5>
                        <a class="btn btn-success me-3" data-bs-toggle="modal" data-bs-target="#createRegionModal">
                            <i class="bi bi-plus"></i>
                        </a>
                    </div>
                    <div class="table-responsive">
                        <table id="mytable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>shipping cost</th>
                                    <th>City</th>
                                    <th>Update</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Create -->
<div class="modal fade" id="createRegionModal" tabindex="-1" aria-labelledby="createRegionLabel" 
aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="createRegionForm">
                    @Html.AntiForgeryToken()
                    <div id="validationSummary" class="alert alert-danger d-none"></div>
                    <div class="mb-3">
                        <label for="regionName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="regionName" name="Name" required>
                    </div>
                    <div class="mb-3">
                        <label for="shippingCost" class="form-label">shipping cost</label>
                        <input type="number" step="0.01" class="form-control" id="shippingCost" name="ShippingCost" required>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Update -->
<div class="modal fade" id="updateRegionModal" tabindex="-1" aria-labelledby="updateRegionLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateRegionLabel">Update Region</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="updateRegionForm">
                    @Html.AntiForgeryToken()
                    <div id="updateValidationSummary" class="alert alert-danger d-none"></div>
                    <input type="hidden" id="updateRegionId" name="Id" required>
                    <div class="mb-3">
                        <label for="updateRegionName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="updateRegionName" name="Name" required>
                    </div>
                    <div class="mb-3">
                        <label for="updateShippingCost" class="form-label">shipping cost</label>
                        <input type="number" step="0.01" class="form-control" id="updateShippingCost" name="ShippingCost" required>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/dashboard/js/Region.js"></script>
    <script>
        // Create
        $(document).ready(function () {
            $("#createRegionForm").on("submit", function (e) {
                e.preventDefault();

                var formData = new FormData(document.getElementById('createRegionForm'));

                $.ajax({
                    url: '@Url.Action("Create", "Region")',
                    type: 'POST',
                    processData: false,
                    contentType: false,
                    data: formData,
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() 
                    },
                    success: function (response) {
                        if (response.success) {
                            $('#createRegionModal').modal('hide');
                            toastr.success(response.message);
                            dtble.ajax.reload();
                        }
                    },
                    error: function (xhr, status, error) {
                        toastr.error("An error occurred");
                    }
                });
            });
        });

        // Update
        $(document).ready(function () {
            $(document).on("click", ".btn-update-region", function () {
                var regionId = $(this).data("id");
                $.ajax({
                    url: '@Url.Action("GetRegionById", "Region")',
                    type: 'GET',
                    data: { id: regionId },
                    success: function (data) {
                        $("#updateRegionId").val(data.id);
                        $("#updateRegionName").val(data.name);
                        $("#updateShippingCost").val(data.shippingCost);

                        $("#updateRegionModal").modal("show");
                    },
                    error: function () {
                        toastr.error("An error occurred");
                    }
                });
            });

            $("#updateRegionForm").on("submit", function (e) {
                e.preventDefault();

                var formData = new FormData(document.getElementById('updateRegionForm'));

                $.ajax({
                    url: '@Url.Action("Update", "Region")',
                    type: 'POST',
                    processData: false,
                    contentType: false,
                    data: formData,
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (response) {
                        if (response.success) {
                            $('#updateRegionModal').modal('hide');
                            toastr.success(response.message);
                            dtble.ajax.reload();
                        }
                    },
                    error: function (xhr, status, error) {
                        toastr.error("An error occurred");
                    }
                });
            });
        });

    </script>
}